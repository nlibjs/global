{
    "name": "@nlib/global",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.18.0",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/global",
    "repository": "https://github.com/nlibjs/global",
    "engines": {
        "node": ">=12"
    },
    "type": "module",
    "main": "./esm/index.mjs",
    "exports": {
        "import": "./esm/index.mjs",
        "require": "./cjs/index.cjs"
    },
    "files": [
        "esm",
        "cjs",
        "!*.test.*",
        "!*.map"
    ],
    "scripts": {
        "build": "run-s build:*",
        "build:index": "indexen --input src --output src/index.ts",
        "build:esm": "run-s build:esm:*",
        "build:esm:tsc": "tsc",
        "build:esm:rename": "replace-ext --directory esm --entry js/mjs",
        "build:esm:resolve": "resolve-imports --directory esm --ext mjs",
        "build:cjs": "run-s build:cjs:*",
        "build:cjs:tsc": "tsc --project tsconfig.cjs.json",
        "build:cjs:rename": "replace-ext --directory cjs --entry js/cjs",
        "build:cjs:resolve": "resolve-imports --directory cjs --ext cjs --cjs",
        "test": "run-s build test:*",
        "test-skipbuild": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:cjs": "ava './cjs/**/*.test.cjs'",
        "test:esm": "ava './esm/**/*.test.mjs'",
        "lint": "eslint --ext .ts src",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "devDependencies": {
        "@nlib/changelog": "0.1.9",
        "@nlib/eslint-config": "3.17.16",
        "@nlib/lint-commit": "0.1.3",
        "@nlib/nodetool": "0.1.11",
        "@types/eslint": "7.2.6",
        "@types/node": "14.14.16",
        "@typescript-eslint/eslint-plugin": "4.11.0",
        "@typescript-eslint/parser": "4.11.0",
        "ava": "3.14.0",
        "eslint": "7.16.0",
        "husky": "4.3.6",
        "lint-staged": "10.5.3",
        "npm-run-all": "4.1.5",
        "sucrase": "3.16.0",
        "typescript": "4.1.3"
    },
    "eslintConfig": {
        "extends": [
            "@nlib"
        ],
        "overrides": [
            {
                "files": [
                    "src/global.ts"
                ],
                "rules": {
                    "no-shadow-restricted-names": "off",
                    "@nlib/no-globals": [
                        "error",
                        {
                            "allowed": [
                                "globalThis"
                            ]
                        }
                    ],
                    "@typescript-eslint/unbound-method": "off"
                }
            },
            {
                "files": [
                    "src/getType.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off",
                    "@typescript-eslint/unbound-method": "off"
                }
            },
            {
                "files": [
                    "src/AppError.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off"
                }
            },
            {
                "files": [
                    "src/defineReadOnlyProperties.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off",
                    "@typescript-eslint/no-unsafe-assignment": "off"
                }
            },
            {
                "files": [
                    "src/serialize.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off",
                    "@typescript-eslint/no-unnecessary-condition": "off"
                }
            },
            {
                "files": [
                    "src/serialize.test.ts"
                ],
                "rules": {
                    "@nlib/no-globals": [
                        "error",
                        {
                            "allowed": [
                                "Symbol"
                            ]
                        }
                    ]
                }
            }
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "nlib-lint-commit --input HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
