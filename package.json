{
    "name": "@nlib/global",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.17.11",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/global",
    "repository": "https://github.com/nlibjs/global",
    "engines": {
        "node": ">=12"
    },
    "main": "./lib/index.js",
    "exports": {
        ".": "./lib/index.js"
    },
    "files": [
        "lib",
        "src",
        "!*.test.*"
    ],
    "scripts": {
        "build": "run-s build:*",
        "build:indexen": "indexen --input src --output src/index.ts",
        "build:tsc": "tsc",
        "test": "ava",
        "lint": "eslint --ext .ts src"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@nlib/eslint-config": "^3.17.10",
        "@nlib/nodetool": "0.0.2",
        "@types/eslint": "^7.2.2",
        "@typescript-eslint/eslint-plugin": "^4.0.1",
        "@typescript-eslint/parser": "^4.0.1",
        "ava": "^3.12.1",
        "eslint": "^7.8.1",
        "husky": "^4.2.5",
        "lint-staged": "^10.3.0",
        "npm-run-all": "^4.1.5",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "!**/*.module.ts"
        ]
    },
    "eslintConfig": {
        "extends": [
            "@nlib"
        ],
        "overrides": [
            {
                "files": [
                    "src/global.ts"
                ],
                "rules": {
                    "no-shadow-restricted-names": "off",
                    "@nlib/no-globals": [
                        "error",
                        {
                            "allowed": [
                                "globalThis"
                            ]
                        }
                    ],
                    "@typescript-eslint/unbound-method": "off"
                }
            },
            {
                "files": [
                    "src/getType.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off",
                    "@typescript-eslint/unbound-method": "off"
                }
            },
            {
                "files": [
                    "src/AppError.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off"
                }
            },
            {
                "files": [
                    "src/defineReadOnlyProperties.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off",
                    "@typescript-eslint/no-unsafe-assignment": "off"
                }
            },
            {
                "files": [
                    "src/serialize.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off",
                    "@typescript-eslint/no-unnecessary-condition": "off"
                }
            },
            {
                "files": [
                    "src/serialize.test.ts"
                ],
                "rules": {
                    "@nlib/no-globals": [
                        "error",
                        {
                            "allowed": [
                                "Symbol"
                            ]
                        }
                    ]
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@nlib/eslint-config/commitlint.config.js"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
