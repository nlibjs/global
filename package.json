{
    "name": "@nlib/global",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.17.8",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/global",
    "repository": "https://github.com/nlibjs/global",
    "engines": {
        "node": ">=12"
    },
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "tsc",
        "test": "ava",
        "lint": "eslint --ext .ts --ext .js src",
        "prepack": "rimraf 'lib/**/*.test.*'"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@nlib/eslint-config": "^3.17.6",
        "@nlib/eslint-plugin": "^1.0.2",
        "@types/eslint": "^7.2.2",
        "@typescript-eslint/eslint-plugin": "^3.10.1",
        "@typescript-eslint/parser": "^3.10.1",
        "ava": "^3.12.1",
        "eslint": "^7.7.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.13",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "!**/*.module.ts"
        ]
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "rules": {
            "@nlib/print-filename": "error",
            "@nlib/restrict-globals": "error"
        },
        "overrides": [
            {
                "files": [
                    "src/global.ts"
                ],
                "rules": {
                    "no-shadow-restricted-names": "off",
                    "@nlib/restrict-globals": [
                        "error",
                        {
                            "allowed": [
                                "globalThis"
                            ]
                        }
                    ],
                    "@typescript-eslint/unbound-method": "off"
                }
            },
            {
                "files": [
                    "src/getType.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off",
                    "@typescript-eslint/unbound-method": "off"
                }
            },
            {
                "files": [
                    "src/AppError.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off"
                }
            },
            {
                "files": [
                    "src/defineReadOnlyProperties.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off",
                    "@typescript-eslint/no-unsafe-assignment": "off"
                }
            },
            {
                "files": [
                    "src/serialize.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off",
                    "@typescript-eslint/no-unnecessary-condition": "off"
                }
            },
            {
                "files": [
                    "src/serialize.test.ts"
                ],
                "rules": {
                    "@nlib/restrict-globals": [
                        "error",
                        {
                            "allowed": [
                                "Symbol"
                            ]
                        }
                    ]
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
